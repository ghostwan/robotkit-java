<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context="com.ghostwan.robotsdk.TestActivity">

    <Button
            android:text="Say hello"
            android:onClick="onSayHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:text="Listen and talk"
            android:onClick="onListenAndTalk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onStopEverything"
            android:text="Stop everything"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSpeakAndMove"
            android:text="Stop everything"/>

</LinearLayout>
